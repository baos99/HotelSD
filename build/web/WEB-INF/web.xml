<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ContextListener</description>
        <listener-class>servlets.context.ContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ServletMain</servlet-name>
        <servlet-class>servlets.ServletMain</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletBorrarHuesped</servlet-name>
        <servlet-class>servlets.ServletBorrarHuesped</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletBorrarReserva</servlet-name>
        <servlet-class>servlets.ServletBorrarReserva</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletModificarHuesped</servlet-name>
        <servlet-class>servlets.ServletModificarHuesped</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletModificarReserva</servlet-name>
        <servlet-class>servlets.ServletModificarReserva</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAnadirHuesped</servlet-name>
        <servlet-class>servlets.ServletAnadirHuesped</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAnadirReserva</servlet-name>
        <servlet-class>servlets.ServletAnadirReserva</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletBuscarHuesped</servlet-name>
        <servlet-class>servlets.ServletBuscarHuesped</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletBuscarHuesped2XML</servlet-name>
        <servlet-class>servlets.ServletBuscarHuesped2XML</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletBuscarReserva</servlet-name>
        <servlet-class>servlets.ServletBuscarReserva</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletMain</servlet-name>
        <url-pattern>/ServletMain</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletBorrarHuesped</servlet-name>
        <url-pattern>/ServletBorrarHuesped</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletBorrarReserva</servlet-name>
        <url-pattern>/ServletBorrarReserva</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletModificarHuesped</servlet-name>
        <url-pattern>/ServletModificarHuesped</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletModificarReserva</servlet-name>
        <url-pattern>/ServletModificarReserva</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletBuscarHuesped</servlet-name>
        <url-pattern>/ServletBuscarHuesped</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletBuscarHuesped2XML</servlet-name>
        <url-pattern>/ServletBuscarHuesped2XML</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletBuscarReserva</servlet-name>
        <url-pattern>/ServletBuscarReserva</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAnadirHuesped</servlet-name>
        <url-pattern>/ServletAnadirHuesped</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAnadirReserva</servlet-name>
        <url-pattern>/ServletAnadirReserva</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
